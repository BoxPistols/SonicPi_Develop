# 01-BassDrum

live_loop :flibble_beat do
  use_bpm 60
  
  sample :bd_haus, rate: 0.2, amp: 0.5
  sleep 0.25
  
  sample :bd_haus, rate: 0.2, amp: 0.3
  sleep 0.25/2
  
  sample :bd_haus, rate: 0.2, amp: 0.25
  sleep 0.25/2
  
  sample :bd_haus, rate: 0.2, amp: 0.56
  sleep 0.25
  
  sample :bd_haus, rate: 0.2, amp: 0.18
  sleep 0.25/2
  
  sample :bd_haus, rate: 0.2, amp: 0.2
  sleep 0.25/2
  
  stop
end
