use_bpm 40

live_loop :melo do
  with_fx  :reverb do
    n = rrand_i(8, 32)
    n.times do
      osc = use_osc "192.168.9.10", 12345
      osc "/log/multi_message"
      ns = (scale :c2, :mixolydian, num_octaves: 4 )
      play ns.choose, amp: rrand(0, 0.3), pan: rrand(-1.0, 1.0), release: rrand(0.0, 4.0)
      sleep 0.15
    end
    sleep rrand(1.0, 2.0)
  end
end
